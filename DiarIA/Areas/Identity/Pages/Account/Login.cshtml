@page
@model DiarIA.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="auth-wrapper">
    <h2 class="auth-header">Iniciar Sesión</h2>
    <div class="auth-separator"></div>
    <div id="recoverySuccessAlert" class="alert alert-success border-0 shadow-sm text-center" style="display:none;">
        <i class="bi bi-check-circle-fill me-2"></i> <strong>¡Listo!</strong> Enlace enviado.
    </div>
    <form id="account" method="post" novalidate>
        <div id="globalErrorAlert" class="alert-danger-soft" role="alert" style="display:none;">
            <div asp-validation-summary="ModelOnly" class="text-danger-bold"></div>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control form-control-auth inputs-limpiar" placeholder="correo" data-val="true" data-val-required="Ingrese correo." />
            <label asp-for="Input.Email" class="text-muted">Correo</label>
            <span asp-validation-for="Input.Email" class="text-danger-bold"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control form-control-auth inputs-limpiar" placeholder="pass" data-val="true" data-val-required="Ingrese contraseña." />
            <label asp-for="Input.Password" class="text-muted">Contraseña</label>
            <span asp-validation-for="Input.Password" class="text-danger-bold"></span>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <div class="checkbox"><label class="text-muted small"><input class="form-check-input me-1" asp-for="Input.RememberMe" /> Recordarme</label></div>
            <a href="#collapseForgot" data-bs-toggle="collapse" class="text-decoration-none small fw-bold text-primary">¿Olvidaste contraseña?</a>
        </div>
        <div class="collapse mb-3" id="collapseForgot">
            <div class="p-3 bg-light rounded-3 border">
                <input type="email" id="recoveryEmailInput" class="form-control mb-2" placeholder="Correo de recuperación" />
                <button id="btnSendRecovery" class="btn btn-primary w-100 btn-sm">Enviar</button>
            </div>
        </div>
        <button id="login-submit" type="submit" class="btn btn-auth-big">Iniciar Sesión</button>
        <div class="text-center mt-3"><a asp-page="./Register" class="small text-secondary">¿No tienes cuenta? <span class="fw-bold text-primary">Regístrate</span></a></div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            if ($(".text-danger-bold ul li").length > 0) $("#globalErrorAlert").show();
            $(".inputs-limpiar").on("input", function() { $("#globalErrorAlert").fadeOut(200); });
            $("#btnSendRecovery").click(function (e) {
                e.preventDefault();
                $.ajax({ url: '/Identity/Account/ForgotPassword', type: 'POST', data: { "Input.Email": $("#recoveryEmailInput").val(), "__RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() }, success: function () { $("#recoverySuccessAlert").fadeIn().delay(3000).fadeOut(); } });
            });
        });
    </script>
}