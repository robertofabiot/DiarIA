@page
@model DiarIA.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    var email = Model.Email;
}
<div class="auth-wrapper text-center">
    <i class="bi bi-envelope-paper-heart text-primary" style="font-size: 4rem;"></i>
    <h2 class="auth-header my-3">¡Casi listo!</h2>
    <p class="text-muted">Verifica tu correo: <span class="fw-bold">@email</span></p>
    <a asp-page="./Login" class="btn btn-outline-primary rounded-pill fw-bold">Volver al inicio</a>
</div>