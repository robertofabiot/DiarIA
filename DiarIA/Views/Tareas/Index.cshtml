@model IEnumerable<DiarIA.Models.Tarea>

@{
    ViewData["Title"] = "Mis Tareas";
}

<div class="container-fluid py-4">
    <div class="row">

        <div class="col-lg-3 col-md-4 mb-4">
            <div class="chat-container">
                <div class="chat-header">
                    <i class="bi bi-robot me-2 fs-4"></i>
                    <div>
                        <span class="d-block lh-1">Coach DiarIA</span>
                        <small class="fw-light opacity-75" style="font-size: 0.75rem;">En línea</small>
                    </div>
                </div>

                <div class="chat-messages" id="chatHistory">
                    <div class="msg-bot">
                        Hola, <strong>@User.Identity?.Name</strong>. 👋 <br>
                        ¿Cómo te sientes hoy para realizar tus tareas?
                    </div>
                </div>

                <div class="chat-actions text-center">
                    <p class="text-muted small mb-2">Selecciona tu estado:</p>
                    <div class="d-flex flex-wrap justify-content-center gap-1">
                        <button class="btn btn-mood" onclick="responderChat('cansado')">😴 Cansado</button>
                        <button class="btn btn-mood" onclick="responderChat('triste')">😔 Triste</button>
                        <button class="btn btn-mood" onclick="responderChat('motivado')">🔥 Motivado</button>
                        <button class="btn btn-mood" onclick="responderChat('estresado')">🤯 Estresado</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9 col-md-8">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark mb-0">Tablero de Tareas</h2>
                <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">
                    @if (Model != null)
                    {
                        @Model.Count()
                    }
                    else
                    {

                        <text>0</text>
                    }
 pendientes
                </span>
            </div>
