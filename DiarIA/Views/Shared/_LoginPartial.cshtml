@using Microsoft.AspNetCore.Identity
@using DiarIA.Models
@using DiarIA.Areas.Identity.Pages.Account

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var currentPage = ViewContext.RouteData.Values["Page"]?.ToString();
    bool isAuthPage = currentPage != null && (
        currentPage.Equals("/Account/Login", StringComparison.OrdinalIgnoreCase) ||
        currentPage.Equals("/Account/Register", StringComparison.OrdinalIgnoreCase));
}

<ul class="navbar-nav align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        var userName = UserManager.GetUserName(User);
        var inicial = !string.IsNullOrEmpty(userName) ? userName.Substring(0, 1).ToUpper() : "U";

        <li class="nav-item d-flex align-items-center me-3">
            <span class="me-2 text-secondary small fw-bold">Hola, @userName</span>
            <a id="manage" class="user-avatar" asp-area="Identity" asp-page="/Account/Manage/Index" title="Mi Cuenta">@inicial</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3 fw-bold">Salir</button>
            </form>
        </li>
    }
    else
    {
        if (!isAuthPage)
        {
            <li class="nav-item">
                <a class="btn btn-outline-primary btn-sm btn-nav-auth" id="login" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesión</a>
            </li>
            <li class="nav-item d-flex align-items-center">
                <span class="nav-divider">|</span>
            </li>
            <li class="nav-item">
                <a class="btn btn-primary btn-sm btn-nav-auth shadow-sm" id="register" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
            </li>
        }
    }
</ul>