@model IEnumerable<DiarIA.Models.Tarea>

@{
    ViewData["Title"] = "Index";
}
<div class="card bg-light mb-4 shadow-sm" style="border-left: 5px solid #0d6efd;">
    <div class="card-body">
        <h5 class="card-title text-primary"><i class="bi bi-robot"></i> Asistente de Agenda</h5>

        <form asp-action="Reorganizar" method="post" class="row g-2 align-items-center">
            <div class="col-md-9">
                <input type="text" name="instruccionIA" class="form-control"
                       placeholder="Ej: 'Mueve todo lo de hoy para mañana' o 'Libera mi tarde del viernes'..." required />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    ✨ Reorganizar
                </button>
            </div>
        </form>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Info"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Info"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaTope)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAgendada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DuracionMinutos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prioridad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dificultad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaTope)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAgendada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DuracionMinutos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prioridad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dificultad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Completada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
