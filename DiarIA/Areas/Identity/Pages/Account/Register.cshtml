@page
@model DiarIA.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<div class="auth-wrapper">
    <h2 class="auth-header">Crear Cuenta</h2>
    <div class="auth-separator"></div>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
        <div id="registerErrorAlert" class="alert-danger-soft" role="alert" style="display:none;">
            <div asp-validation-summary="ModelOnly" class="text-danger-bold"></div>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control form-control-auth inputs-limpiar" placeholder="correo" />
            <label asp-for="Input.Email" class="text-muted">Correo</label>
            <span asp-validation-for="Input.Email" class="text-danger-bold"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control form-control-auth inputs-limpiar" placeholder="pass" />
            <label asp-for="Input.Password" class="text-muted">Contraseña</label>
            <span asp-validation-for="Input.Password" class="text-danger-bold"></span>
        </div>
        <div class="form-floating mb-4">
            <input asp-for="Input.ConfirmPassword" class="form-control form-control-auth inputs-limpiar" placeholder="pass" />
            <label asp-for="Input.ConfirmPassword" class="text-muted">Confirmar</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger-bold"></span>
        </div>
        <button id="registerSubmit" type="submit" class="btn btn-auth-big">Registrarse</button>
        <div class="text-center mt-3">
            <a asp-page="./Login" class="text-decoration-none small text-secondary">¿Ya tienes cuenta? <span class="fw-bold text-primary">Inicia sesión</span></a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            if ($(".text-danger-bold ul li").length > 0) { $("#registerErrorAlert").show(); $("#Input_Password").val(""); }
            $(".inputs-limpiar").on("input", function() { $("#registerErrorAlert").fadeOut(200); $(this).siblings(".text-danger-bold").text(""); });
        });
    </script>
}