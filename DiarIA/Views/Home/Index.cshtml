@using Microsoft.AspNetCore.Identity
@using DiarIA.Models
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Inicio";
}

<div class="container d-flex flex-column justify-content-center" style="min-height: 80vh;">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center p-5 bg-white rounded-4 shadow-lg">
                    <h1 class="display-4 fw-bold text-primary mb-3">Bienvenido a DiarIA</h1>
                    <div class="my-4">
                        <img src="~/img/logo_sin_fondo.png" alt="DiarIA Logo" style="max-width: 150px; height: auto;" />
                    </div>
                    <div class="motivational-capsule mt-2">
                        <i class="bi bi-lightning-fill text-warning fs-4 me-2"></i>
                        <h5 class="mb-0 fw-light fst-italic">"¡Tu mejor versión está a la vuelta de la esquina!"</h5>
                    </div>
                    <div class="mt-5">
                        <a asp-controller="Tareas" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 py-3 shadow fw-bold">
                            Ir a mis tareas <i class="bi bi-arrow-right-short ms-2 align-middle"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row align-items-center mt-4">
            <div class="col-md-7 mb-4 mb-md-0">
                <div class="welcome-box">
                    <h1 class="display-4 fw-bold text-dark mb-2">Bienvenido a <span class="text-primary">DiarIA</span></h1>
                    <p class="lead text-secondary mb-4">Tu asistente personal de tareas según tu ánimo.</p>
                    <div class="mt-3">
                        <img src="~/img/logo_sin_fondo.png" alt="DiarIA Logo" style="max-width: 250px; height: auto;" />
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="auth-box text-center">
                    <h2 class="fw-bold text-success mb-4">¡Comienza ya!</h2>
                    <div class="d-grid gap-3 px-2">
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-lg rounded-pill fw-bold">Iniciar Sesión</a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg rounded-pill fw-bold shadow">Crear cuenta gratis</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>